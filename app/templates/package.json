{
  "private": true,
  "engines": {
    "node": ">=8.0"
  },
  "devDependencies": {
    "browserify": "^12.0.0",
    "jquery": "^2.2.0",
    "jquery-ui": "^1.10",
    "underscore": "^1.8.3",
    "bootstrap-sass": "^3.3.6",
    "font-awesome": "^4.5.0",
    "browserify": "^12.0.0",
    "watchify": "^3.7.0",
    "browserify-shim": "^3.8.12",
    "parallelshell": "^2.0.0",
    "live-server": "^0.9.2",
    "onchange": "^2.0.0"
  },
  "scripts": {
    "sass": "sass --style compressed --update app/styles/app.sass:app/styles/app.css",
    "browserify": "browserify app/scripts/index.js -o app/scripts/bundle.js",
    "watch:sass": "sass --watch app/styles/app.sass:app/styles/app.css",
    "watch:js": "watchify app/scripts/index.js -o app/scripts/bundle.js",
    "server": "live-server --open='app'",
    "watch": "parallelshell 'npm run watch:sass' 'npm run watch:js' 'npm run server'"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jQuery": "$",
    "underscore": "_"
  }
}
